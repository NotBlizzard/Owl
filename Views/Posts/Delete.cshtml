@model Owl.Models.Post

@{
    ViewData["Title"] = "Delete";
}


<div class="text-center">
    <h1>Are you sure you want to delete this?</h1>
    <hr />
    <h4>@Html.DisplayFor(model => model.PostTitle)</h4>
    <div id="post-data">@Html.Raw(Model.PostData)</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button" id="delete-button" /> 
        <a asp-action="Index" class="button">Back to List</a>
    </form>
</div>
